{
  "elements": [
    {
      "type": "SelectInstance",
      "name": "PushoverInstance",
      "caption": "Pushover Instanz"
    },
    {
      "type": "ValidationTextBox",
      "name": "PushTitle",
      "caption": "Push Titel"
    },
    {
      "type": "NumberSpinner",
      "name": "PushPriority",
      "caption": "Priorität (0 = normal)",
      "minimum": -2,
      "maximum": 2
    },
    {
      "type": "ValidationTextBox",
      "name": "AlarmText",
      "caption": "Text bei LOW (TRUE)"
    },
    {
      "type": "ValidationTextBox",
      "name": "OkText",
      "caption": "Text bei OK (FALSE)"
    },
    {
      "type": "CheckBox",
      "name": "ReminderEnabled",
      "caption": "Tägliche Erinnerung senden, solange LOW anliegt"
    },
    {
      "type": "NumberSpinner",
      "name": "ReminderHour",
      "caption": "Erinnerung um (Stunde 0-23)",
      "minimum": 0,
      "maximum": 23
    },
    {
      "type": "List",
      "name": "Variables",
      "caption": "Überwachte Low_Bat Variablen",
      "add": true,
      "delete": true,
      "sort": true,
      "columns": [
        {
          "caption": "Aktiv",
          "name": "Enabled",
          "width": "80px",
          "add": true,
          "edit": {
            "type": "CheckBox"
          }
        },
        {
          "caption": "Variable",
          "name": "VariableID",
          "width": "260px",
          "add": 0,
          "edit": {
            "type": "SelectVariable"
          }
        },
        {
          "caption": "Name (in Nachricht)",
          "name": "Label",
          "width": "auto",
          "add": "",
          "edit": {
            "type": "ValidationTextBox"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Button",
      "label": "Testnachricht senden",
      "onClick": "IPS_RequestAction($id, 'Test', 0);"
    }
  ]
}
